<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="customer.krainrealestate"
      tal:omit-tag="">
  
  <section class="agentsearch-wrapper viewlet"
      tal:condition="view/available">
    <div class="agent-wrapper" tal:define="agents view/getAllAgents|nothing">
      <tal:agents tal:repeat="agent agents">
        <div class="agent">
        <tal:agent
          tal:define="my_agent python:agents.get(agent);
                      id python:my_agent.get('id');
                      portrait python: view.AgentPortrait(id);
                      email python: my_agent.get('email');
                      fullname python: my_agent.get('fullname');
                      areas python: my_agent.get('areas');
                      ">

          <div class="agent-avatar" tal:content="structure portrait">(Agent Avatar)</div>
          <div class="agent-name" tal:content="fullname">(Agent Fullname)</div>
          <div class="agent-areas" tal:condition="areas">
            <span class="label" i18n:translate="" >areas serviced</span><span class="seperator">:</span>
            <div class="area-list" tal:content="areas">(Agent Areas)</div>
          </div>
          <div class="agent-profilepage"
                i18n:translate="">Visit Agent Profile</div>
          <div class="agent-select" tal:condition="email">
            <!-- Set Link to mail the agent -->
            <a class="link mailto" target="__blank" 
              i18n:translate=""
              tal:attributes="href string:mailto:${email}">
              Select Agent</a>
          </div>
        </tal:agent>
        </div>
      </tal:agents>
    </div>
  </section>
</html>